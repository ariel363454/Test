#include <stdio.h>
int main()
{
  int n=5;
  int x=1;
  do {
    int y=0;
    do {
      printf(" ");
      y++;
    } while(y<=(n-x)/2);
    y=0;
    do {
      printf("*");
      y++;
    } while(y<x);
    printf("\n");
    x+=2;
  } while(x<n);
  do {
    int y=0;
    do {
      printf(" ");
      y++;
    } while(y<=(n-x)/2);
    y=0;
    do {
      printf("*");
      y++;
    } while(y<x);
    printf("\n");
    x-=2;
  } while(x>0);
}
