#include <stdio.h>
int main()
{
  int n=7;
  int x=1;
  while(x<=n) {
    int y=0;
    while(y<=(n-x)/2) {
      printf(" ");
      y++;
    }
    y=0;
    while(y<x) {
      printf("*");
      y++;
    }
    printf("\n");
    x+=2;
  }
  x=n-2;
  while(x>0) {
    int y=0;
    while(y<=(n-x)/2) {
      printf(" ");
      y++;
    }
    y=0;
    while(y<x) {
      printf("*");
      y++;
    }
    printf("\n");
    x-=2;
  }
}
