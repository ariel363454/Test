#include <stdio.h>
int main()
{
  int n=7;
  int x, y;
  for(x=1; x<=n; x+=2) {
    for(y=0; y<=(n-x)/2; y++) {
      printf(" ");
    }
    for(y=0; y<x; y++) {
      printf("*");
    }
    printf("\n");
  }
  for(x=n-2; x>0; x-=2) {
    for(y=0; y<=(n-x)/2; y++) {
      printf(" ");
    }
    for(y=0; y<x; y++) {
      printf("*");
    }
    printf("\n");
  }
}
