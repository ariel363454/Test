#include <stdio.h>

int main()
{
    int n=4, i, j;
    for (i=n;i>=1;i--) {
        if (i!=4) 
            printf("%*s",n-i," ");
        for (j=2*i-1;j>=1;j--) {
            printf("*");
        }
        printf("\n");
    }
    for (i=2;i<=n;i++) {
        if (i!=4) 
            printf("%*s",n-i," ");
        for (j=2*i-1;j>=1;j--) {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
