#include <stdio.h>

int main()
{
    int n=4, i, j;
    for (i=1;i<=n;i++) {
        if (i!=4)
            printf("%*s",n-i," ");
        for (j=1;j<=i;j++) {
            printf("*");
        }
        printf("\n");
    }
    for (i=n;i>=1;i--) {
        printf("%*s",n-1," ");
        for (j=i;j>=1;j--) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
