#include <stdio.h>

int main()
{
    int n=4,i,j;
    for (i=1;i<=n;i++) {
        printf("%*s*",n-1," ");
        if (i==1) {
            printf("\n");
            continue;
        }
        for (j=1;j<=i;j++) 
            printf("*");
        printf("\n");
    }
    for (i=n;i>=1;i--) {
        printf("%*s*",n-1," ");
        if (i==1) {
            printf("\n");
            continue;
        }
        for (j=1;j<=i;j++)
            printf("*");
        printf("\n");
    }
    for (i=1;i<=n;i++) {
        for (j=1;j<=2*n;j++)
            printf("*");
        printf("\n");
    }
    
    return 0;
}
